@model EntityLayer.Concrete.New
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateNews", "New", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Deneyim Güncelleme Paneli</p>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.NewID, new { @class = "form-control" })
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>İçerik</label>
                        @Html.TextAreaFor(x => x.Description, 10, 6, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label asp-for="Category.CategoryName" class="control-label"></label>
                        <select asp-for="CategoryID" class="form-control" asp-items="@(new SelectList(ViewBag.Category,"CategoryID","CategoryName"))"></select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark mr-2">İptal</button>
                    <a href="/Admin/AcceptNews/@Model.NewID" class="btn btn-success">Onayla</a>
                    <a href="/Admin/RejectNews/@Model.NewID" class="btn btn-danger">Reddet</a>
                </form>
            </div>
        </div>
    </div>
}

