@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Kategori Güncelleme Paneli</p>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.CategoryID, new { @class = "form-control" })
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark mr-2">İptal</button>
                </form>
            </div>
        </div>
    </div>
}


