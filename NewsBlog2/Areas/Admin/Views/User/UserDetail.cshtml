@model EntityLayer.Concrete.UserPerson
@{
    ViewData["Title"] = "UserDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UserDetail", "User", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Kategori Güncelleme Paneli</p>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
                    <div class="form-group d-flex col-12">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <label>İsim</label>
                                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                </div>
                                <div class="col-md-6">
                                    <label>Soyisim</label>
                                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group d-flex col-12">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Üyeliği Pasife Al</label>
                                    @Html.CheckBoxFor(x => x.Status)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 d-flex float-right">
                        <div class="container">
                            <div class="row">
                                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                                <button class="btn btn-dark mr-2">İptal</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

