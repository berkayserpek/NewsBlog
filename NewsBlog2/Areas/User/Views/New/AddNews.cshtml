@model EntityLayer.Concrete.New
@{
    ViewData["Title"] = "AddNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddNews", "New", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Haber Ekle </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" name="Title" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>İçerik</label>
                        <input type="text" name="Description" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        <input type="text" name="ImageURL" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="Date" rows="6"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category.CategoryName" class="control-label"></label>
                        <select asp-for="CategoryID" class="form-control" asp-items="@(new SelectList(ViewBag.Category,"CategoryID","CategoryName"))"></select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

