@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>kategori ismi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryID</td>
                                <td>@item.CategoryName</td>
                                <td><a href="/Test/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Test/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Test/AddCategory/" class="btn btn-outline-info">Yeni Category Ekle</a>
            </div>
        </div>
    </div>
</div>


