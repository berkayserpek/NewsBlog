@model NewsBlog2.Models.UserLoginVM

@{
    ViewData["Title"] = "Index";
}

@Html.AntiForgeryToken()
<form class="pt-3" method="post" asp-action="/Login/Index">
    <div class="form-group">
        <label>Kullanıcı</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adınız</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly">

    </div>
    <div class="register-button">
        <button class="btn btn-primary" type="submit" asp-action="Index">Giriş Yap</button>
    </div>
</form>



